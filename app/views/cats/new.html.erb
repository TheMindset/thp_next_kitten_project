<section class="container slice-lg">
  <h3 class=>Télécharger votre image</h3>
    <div class="row">
      <div class="col-md-6">
          <%= form_for [@cat], class:"form-group", action: root_path, method: :POST do |form| %>
            <%= form.text_field :title, placeholder: 'Titre', class:"form-control form-control-lg mb-4", type:'text' %>
            <%= form.text_area :description, placeholder: 'Description...', class:"form-control form-control-lg textarea-autogrow" %>

            <div class="input-group mt-4">
              <%= form.number_field :price, placeholder: 'Prix', class:"form-control form-control-lg mb-4" %>
            </div>

            <div  class="mt-4">
              <%= form.file_field :item_picture %>
            </div>
            <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
            <div class="mt-4">
              <%= form.submit 'Vendre', class:"btn btn-rounded btn-primary" %>
            </div>
          <% end %>
      </div>
    </div>

